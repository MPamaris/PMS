<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_vehicle_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/id_all_coaching_advise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:padding="20dp">

            <ImageView
                android:id="@+id/icon_coaching_of_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_coaching_advise_of_the_week" />

            <TextView
                android:id="@+id/id_text_coaching_of_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start the engine as soon as possible, then once every two days (even if you cannot drive the vehicle)"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/icon_coaching_of_week"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/id_show_more_coaching_of_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_more"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/id_text_coaching_of_week"
                android:textSize="15dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>